@model IEnumerable<Productos>

@if (Model.Count() > 0)
{
    //Mostrar listado de productos
    <form method="POST">
        <br />
        <div class="backgorundWhiteBorder">
            <div class="container row">
                <div class="col-12">
                    <div class="card mt-4">
                        <div class="card-header bg-dark text-light ml-0 row container">
                            <div class="col-6">
                                <i class="fa fa-shopping-cart"></i> &nbsp; Carrito de Compras
                            </div>
                            <div class="col-6 text-right">
                                <a asp-action="Index" asp-controller="Home" class="btn btn-warning btn-sm">Seguir comprando</a>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class=" d-none d-lg-block">
                                <div class="row" style="color:#232526">
                                    <div class="col-lg-2">
                                    </div>
                                    <div class="col-12 col-lg-7">
                                        Detalles del producto
                                    </div>
                                    <div class="col-12 col-lg-2">
                                        Precio
                                    </div>
                                    <div class="col-6 col-sm-4 col-lg-1"></div>
                                </div>
                            </div>
                        </div>

                        <hr />

                        @foreach (var obj in Model)
                        {
                    <div class="row h-100">
                        <div class="col-4 col-md-2 text-center py-2 px-4">
                            <img src="@WC.ProductosPath@obj.Imagen" alt="@obj.Nombre" class="rounded" width="100%" />
                        </div>
                        <div class="col-6 col-lg-7">
                            <h5>@obj.Nombre</h5>
                            <div style="font-size:12px">@obj.DescripcionCorta</div>
                        </div>
                        <div class="col-2 col-lg-1 pt-lg-4" style="font-size: 12px">
                            <span style="font-size:17px">@((obj.Precio).ToString("c"))</span>
                        </div>
                        <div class="col-2 col-lg-1 p-0 pt-lg-4 text-center">
                            <a asp-action="Remover" asp-route-id="@obj.IdProducto" class="btn btn-outline-danger">
                                <i class="fas fa-trash"></i> 
                            </a>
                        </div>

                    </div>
                    <hr />
                        }
                    <div class="card-footer">
                        <div class="row">
                            <div class="col-6 col-md-3 offset-md-9">
                                <button type="submit" class="btn btn-success form-control" >
                                    <span>Continuar</span>
                                </button>
                            </div>
                        </div>
                    </div>
                    </div> 
                </div>
            </div>
        </div>
    </form>   
}
else
{
    <p>Por favor, agregar items al carrito</p>
}