@model MVC_Practica.Models.Categorias
@{
    ViewData["Title"] = "Edit";
}

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="border p-5">
         <h3 class="text-info mb-3">Editar Categoria</h3>
        <div class="col-12 row">
            <div class="form-group row mr-2 col-6">
                <label asp-for="Nombre">Nombre</label>
                <input type="text" placeholder="Escribar el nombre... " asp-for="Nombre" class="form-control" />
                <span class="text-danger" asp-validation-for="Nombre"></span>
            </div>
            <div class="form-group row mr-2 col-6">
                <label asp-for="Orden">Orden</label>
                <input type="Number" placeholder="Escribar el orden... " asp-for="Orden" class="form-control" />
                <span class="text-danger" asp-validation-for="Orden"></span>
            </div>
        </div>
                <button type="submit" class="btn btn-info">Editar</button>
                <a asp-action="Index" class="btn btn-danger ">Cancelar</a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }

}