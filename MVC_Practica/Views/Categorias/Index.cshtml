@model IEnumerable<MVC_Practica.Models.Categorias> 

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h3 class="text-primary">Lista de categorias</h3>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Categorias" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i>
                Agregar categoria
            </a>
        </div>
    </div>
    <br /><br />

    @if (Model.Count() > 0 ){
    <table class="table table-bordered table-striped w-100">
              <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Orden</th>
                    <th>Acciones</th>    
                </tr>
              </thead>
              <tbody>
                  @foreach(var item in Model)
                {
                  <tr>
                      <td width="5%">@item.Id</td>
                      <td width="50%">@item.Nombre</td>
                      <td width="30%">@item.Orden</td>
                      <td>
                          <div class="w-75 btn-group" role="group">
                              <a asp-controller="Categorias" asp-action="Edit" asp-route-Id="@item.Id" class="btn btn-primary mx-2">
                                  <i class="fas fa-edit"></i>Editar
                              </a>
                              <a asp-controller="Categorias" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger mx-2">
                                  <i class="fas fa-trash"></i>Borrar
                              </a>
                          </div>
                      </td>  
                  </tr>
                }
              </tbody>
          </table>}else
            {
                <div class="text-danger">No hay registros disponibles</div>
            }
    
</div>

