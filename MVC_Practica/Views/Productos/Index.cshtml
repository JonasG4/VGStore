@model IEnumerable<MVC_Practica.Models.Productos>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h3 class="text-primary">Lista de Productos</h3>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Upsert" class="btn btn-primary">
                <i class="fas fa-plus"></i>
                Agregar Nuevo Producto
            </a>
        </div>
    </div>
    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped w-100">
            <thead>
                <tr>
                    <th>Nombre de Producto</th>
                    <th>Categoria</th>
                    <th>Consola</th>
                    <th>Precio</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="30%">@item.Nombre</td>
                        <td width="20%">@item.Categorias.Nombre</td>
                        <td width="20%">@item.Consolas.Nombre</td>
                        <td width="10%">@item.Precio</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-action="Upsert" asp-route-Id="@item.IdProducto" class="btn btn-primary mx-2">
                                    <i class="fas fa-edit"></i>Editar
                                </a>
                                <a asp-action="Delete" asp-route-Id="@item.IdProducto" class="btn btn-danger mx-2">
                                    <i class="fas fa-trash"></i>Borrar
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>}
    else
    {
        <div class="text-danger">No hay registros disponibles</div>
    }

</div>

