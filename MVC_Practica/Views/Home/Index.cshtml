@model MVC_Practica.Models.ViewModels.HomeVM
@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="text-center">
        <button class="btn btn-success filter-button" data-filter="all">Todos</button>
        @foreach (var obj in Model.Consolas)
        {
            <button class="btn btn-outline-primary filter-button" data-filter="@obj.Nombre.Replace(' ','_')">@obj.Nombre</button>

        }
    </div>
</div>
<br />
<div class="row">
    @foreach (var prod in Model.Productos)
            {
                //Mostrar lista de productos
                <partial name="_TarjetasProductos" model="prod" />
            }
</div>

@section Scripts{ 
    <script>
        $(document).ready(function () {
            $(".filter-button").click(function () {
                var value = $(this).attr('data-filter');
                if (value == "all") {
                    $('.filter').show('1000');
                } else {
                    $(".filter").not('.' + value).hide('3000');
                    $(".filter").filter('.' + value).show('3000');
                }
            })
        })
    </script>
}